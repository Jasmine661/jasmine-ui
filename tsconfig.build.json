{
    "compilerOptions": {
        // 输出目录
        "outDir": "./dist",
        // 模块类型
        "module": "ESNext",
        // 目标版本
        "target": "ES2020",
        // 库支持
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        // 模块解析
        "moduleResolution": "node",
        // 严格模式
        "strict": true,
        // 声明文件
        "declaration": true,
        // 声明文件目录
        "declarationDir": "./dist/types",
        // 允许合成默认导入
        "allowSyntheticDefaultImports": true,
        // JSX 配置
        "jsx": "react-jsx",
        // 跳过库检查
        "skipLibCheck": true,
        // 允许导入 TS 扩展名
        "allowImportingTsExtensions": false
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.stories.tsx", "src/**/*.test.tsx", "src/main.tsx", "src/App.tsx"]
}